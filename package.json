{
  "name": "worship-planning-ts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rimraf dist && node esbuild.config.mjs && npm run copy:html && npm run copy:json && npm run css:build && node scripts/wrap-css.cjs",
    "push": "clasp push",
    "deploy": "npm run build && npx clasp push -f",
    "build:standalone": "npm run build && node scripts/build-standalone.cjs",
    "watch": "concurrently -k \"npm:watch:build\" \"npm:watch:html\" \"npm:watch:json\" \"npm:watch:css\" \"npm:watch:push\"",
    "watch:build": "node esbuild.config.mjs --watch",
    "copy:html": "copyfiles -f \"src/html/**/*.html\" dist",
    "watch:html": "chokidar \"src/html/**/*.html\" -c \"npm run copy:html\" --initial",
    "copy:json": "copyfiles -u 1 \"src/**/*.json\" dist/",
    "watch:json": "chokidar \"src/**/*.json\" -c \"npm run copy:json\" --initial",
    "css:build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "watch:css": "concurrently -k \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\" \"npm:watch:wrap\"",
    "watch:wrap": "chokidar \"dist/styles.css\" -c \"node scripts/wrap-css.cjs\"",
    "watch:push": "clasp push -w",
    "status": "clasp status",
    "whoami": "clasp login --status"
  },
  "devDependencies": {
    "@types/google-apps-script": "^1.0.88",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.24.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.0"
  }
}
