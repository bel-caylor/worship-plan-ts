{
  "name": "worship-planning-ts",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "rimraf dist && tsc && npm run copy:html && npm run copy:json && npm run css:build && node scripts/wrap-css.js",
    "watch": "npm run build && concurrently -k \"npm:watch:ts\" \"npm:watch:html\" \"npm:watch:json\" \"npm:watch:css\" \"npm:watch:push\"",
    "watch:ts": "tsc -w",
    "copy:html": "copyfiles -f \"src/html/**/*.html\" dist",
    "watch:html": "chokidar \"src/html/**/*.html\" -c \"npm run copy:html\" --initial",
    "copy:json": "copyfiles -u 1 \"src/**/*.json\" dist/",
    "watch:json": "chokidar \"src/**/*.json\" -c \"npm run copy:json\" --initial",
    "css:build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "watch:wrap": "chokidar \"dist/styles.css\" -c \"node scripts/wrap-css.js\"",
    "watch:push": "concurrently -k \"npm:watch:wrap\" \"clasp push -w\"",
    "status": "clasp status",
    "whoami": "clasp login --status"
  },
  "devDependencies": {
    "@types/google-apps-script": "^1.0.88",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.0.0",
    "copyfiles": "^2.4.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.0"
  }
}
